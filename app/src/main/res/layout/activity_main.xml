<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.raijin.demoboy.MainActivity">

    <Switch
        android:text="BGM Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/audio_toggle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/audio_toggle"
        android:layout_marginTop="20dp">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_notification_overlay"
            android:id="@+id/holdbtn1"
            android:layout_weight="1" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_notification_overlay"
            android:id="@+id/holdbtn2"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            app:backgroundTint="@android:color/holo_orange_dark" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_notification_overlay"
            android:id="@+id/holdbtn3"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            app:backgroundTint="@android:color/holo_blue_dark" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_notification_overlay"
            android:id="@+id/holdbtn4"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            app:backgroundTint="@android:color/holo_green_light" />
    </LinearLayout>

    <Switch
        android:text="FM Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fm_toggle"
        android:layout_above="@+id/linearLayout6"
        android:layout_alignRight="@+id/audio_toggle"
        android:layout_alignEnd="@+id/audio_toggle"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="64dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:text="Linear acceleration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/acc_label"
            android:layout_centerVertical="true" />

        <TextView
            android:text="X:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/acc_x" />

        <TextView
            android:text="Y:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/acc_y" />

        <TextView
            android:text="Z:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/acc_z" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout8"
        android:layout_marginBottom="54dp"
        android:layout_marginTop="270dp">

        <TextView
            android:text="Velocity:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vel_view"
            android:layout_weight="1" />

        <TextView
            android:text="Displacement:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout8"
            android:layout_alignRight="@+id/audio_toggle"
            android:layout_alignEnd="@+id/audio_toggle"
            android:id="@+id/disp_view"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="350dp">

        <TextView
            android:text="Wifi strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wifi_strength"
            android:layout_weight="1"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

</RelativeLayout>
